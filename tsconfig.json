{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "components": [
        "src/components"
      ],
      "composables": [
        "src/composables"
      ],
      "pages": [
        "src/pages"
      ],
      "services": [
        "src/services"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "build/**/*.ts",
    "src/**/*.ts"
  ]
}